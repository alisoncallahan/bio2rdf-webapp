<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.bio2rdf</groupId>
  <artifactId>bio2rdf-webapp</artifactId>
  <packaging>war</packaging>
  <version>0.10.0-SNAPSHOT</version>
  <name>Bio2RDF Webapp</name>
  <url>http://bio2rdf.org</url>
  <dependencies>
    <dependency>
      <groupId>org.queryall</groupId>
      <artifactId>queryall</artifactId>
      <version>0.10.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.queryall</groupId>
      <artifactId>queryall-api</artifactId>
      <version>0.10.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.tuckey</groupId>
      <artifactId>urlrewritefilter</artifactId>
      <version>3.2.0</version>
      <type>jar</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
    	<artifactId>sesame-core</artifactId>
    	<groupId>org.openrdf.sesame</groupId>
    	<version>2.3.2</version>
    	<type>pom</type>
    </dependency>
    <dependency>
    	<artifactId>velocity</artifactId>
    	<groupId>org.apache.velocity</groupId>
    	<type>jar</type>
    	<version>1.6.4</version>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.4</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <profiles>
    <profile>
      <id>mquter</id>
	  <activation>
	        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <queryall.BaseConfigLocation>/config/webapp-config-default-mquter-bio2rdf-template.n3</queryall.BaseConfigLocation>
        <queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:mquterBaseConfig</queryall.BaseConfigUri>
        <queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
      </properties>
    </profile>
    <profile>
      <id>quebec</id>
	  <activation>
	        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <queryall.BaseConfigLocation>/config/webapp-config-default-quebec-bio2rdf-template.n3</queryall.BaseConfigLocation>
        <queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:quebecBaseConfig</queryall.BaseConfigUri>
        <queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
      </properties>
    </profile>
    <profile>
      <id>carleton</id>
	  <activation>
	        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <queryall.BaseConfigLocation>/config/webapp-config-default-carleton-bio2rdf-template.n3</queryall.BaseConfigLocation>
        <queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:carletonBaseConfig</queryall.BaseConfigUri>
        <queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
      </properties>
    </profile>
    <profile>
      <id>balancing</id>
	  <activation>
	        <activeByDefault>false</activeByDefault>
      </activation>
      <properties>
        <queryall.BaseConfigLocation>/config/webapp-config-default-balancing-bio2rdf-template.n3</queryall.BaseConfigLocation>
        <queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:balancingBaseConfig</queryall.BaseConfigUri>
        <queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
      </properties>
    </profile>
  </profiles>
  <repositories>
      <repository>
          <id>aduna-repo</id>
          <name>Aduna repository</name>
          <url>http://repo.aduna-software.org/maven2/releases</url>
      </repository>
  </repositories>  
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
  	<plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
    <finalName>bio2rdf-webapp</finalName>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>
