<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.bio2rdf</groupId>
	<artifactId>bio2rdf-webapp</artifactId>
	<packaging>war</packaging>
	<version>1.0.1</version>
	<name>Bio2RDF Webapp</name>
	<url>http://bio2rdf.org</url>
	<developers>
		<developer>
			<id>p_ansell</id>
			<email>p_ansell@yahoo.com</email>
			<name>Peter Ansell</name>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>GNU General Public License 3.0</name>
			<url>http://www.gnu.org/licenses/gpl-3.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<mailingLists>
		<mailingList>
			<name>Bio2RDF Google Group</name>
			<archive>https://groups.google.com/group/bio2rdf/</archive>
			<post>bio2rdf@googlegroups.com</post>
			<subscribe>https://groups.google.com/group/bio2rdf/subscribe</subscribe>
			<unsubscribe>https://groups.google.com/group/bio2rdf/subscribe</unsubscribe>
		</mailingList>
	</mailingLists>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<scm>
		<connection>scm:git:git://bio2rdf.git.sourceforge.net/gitroot/bio2rdf/bio2rdf-webapp</connection>
		<developerConnection>scm:git:ssh://p_ansell@bio2rdf.git.sourceforge.net/gitroot/bio2rdf/bio2rdf-webapp</developerConnection>
		<url>http://bio2rdf.git.sourceforge.net/</url>
	</scm>
	<dependencies>
		<dependency>
			<groupId>org.queryall</groupId>
			<artifactId>queryall-webapp</artifactId>
			<version>1.0.1</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<artifactId>velocity</artifactId>
			<groupId>org.apache.velocity</groupId>
			<type>jar</type>
			<version>1.6.4</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.tuckey</groupId>
			<artifactId>urlrewritefilter</artifactId>
			<version>3.2.0</version>
			<type>jar</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.2</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>servlet-api</artifactId>
			<version>2.4</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>chemblfarmbio</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-farmbio-chembl-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://rdf.farmbio.uu.se/chembl/webapp_configuration/farmbioBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>chembl-farmbio-${project.version}</finalName>
			</build>
		</profile>
		<profile>
			<id>mquter</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-mquter-bio2rdf-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:mquterBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>${project.artifactId}-mquter-${project.version}</finalName>
			</build>
		</profile>
		<profile>
			<id>quebec</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-quebec-bio2rdf-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:quebecBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>${project.artifactId}-quebec-${project.version}</finalName>
			</build>
		</profile>
		<profile>
			<id>carleton</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-carleton-bio2rdf-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:carletonBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>${project.artifactId}-carleton-${project.version}</finalName>
			</build>
		</profile>
		<profile>
			<id>protech</id>
			<activation>
				<activeByDefault>false</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-protech-bio2rdf-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:protechBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>${project.artifactId}-protech-${project.version}</finalName>
			</build>
		</profile>
		<profile>
			<id>balancing</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<queryall.BaseConfigLocation>/config/webapp-config-default-balancing-bio2rdf-template.n3</queryall.BaseConfigLocation>
				<queryall.BaseConfigUri>http://bio2rdf.org/webapp_configuration:balancingBaseConfig</queryall.BaseConfigUri>
				<queryall.BaseConfigMimeFormat>text/rdf+n3</queryall.BaseConfigMimeFormat>
			</properties>
			<build>
				<finalName>${project.artifactId}-balancing-${project.version}</finalName>
			</build>
		</profile>
	</profiles>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<id>attach-source</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.7</version>
				<executions>
					<execution>
						<id>attach-javadoc</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>aduna-repo</id>
			<name>Aduna repository</name>
			<url>http://repo.aduna-software.org/maven2/releases</url>
		</repository>
		<repository>
			<id>on.cs.unibas.ch</id>
			<name>DBIS Maven Releases Repository</name>
			<url>http://on.cs.unibas.ch/maven/repository</url>
		</repository>
        <repository>
            <id>repo.rasea.org</id>
            <name>Rasea Maven Repository (only for UrlRewrite-3.2.0 while it is not in the standard Maven repos)</name>
            <url>http://repo.rasea.org/maven2/</url>
        </repository> 
	</repositories>
</project>
